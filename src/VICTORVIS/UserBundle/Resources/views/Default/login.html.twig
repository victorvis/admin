{% extends 'VICTORVISUserBundle::base.loggedIn.html.twig' %}

{% block body %}

    {% trans_default_domain 'FOSUserBundle' %}

    <div id="login">
        <div class="login-box">
            <div class="container">
                <form role="form" action="{{ path("fos_user_security_check") }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    <div class="form-group">
                        <label for="username">{{ 'security.login.username'|trans }}</label>
                        <input type="text" class="form-control" name="_username" id="username" value="{{ last_username }}" required="required" placeholder="Username">
                    </div>
                    <div class="form-group">
                        <label for="password">{{ 'security.login.password'|trans }}</label>
                        <input type="password" name="_password" class="form-control" id="password" placeholder="Password">
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on"> {{ 'security.login.remember_me'|trans }}
                        </label>
                    </div>

                    {% if error %}
                        <span><p class="text-danger">{{ error|trans }}</p></span>
                    {% endif %}                    
                    
                    <button type="submit" class="btn btn-default btn-success">{{ 'security.login.submit'|trans }}</button>
                </form>  
            </div>
        </div>      
    </div>      

{% endblock %}
