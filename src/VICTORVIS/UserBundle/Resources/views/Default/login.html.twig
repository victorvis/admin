{% extends 'VICTORVISUserBundle::base.login.html.twig' %}

{% block body %}

    {% trans_default_domain 'FOSUserBundle' %}

    <div class="content-login">

        <div class="row">
            <div class="banner col-md-12 text-center">
                <h2>Efetue login para prosseguir</h2>
            </div>
        </div>
    
        <div class="row">
            <div class="col-md-12">
                <div class="login-box col-xs-12 col-lg-4 col-lg-offset-4">
                    <form role="form" action="{{ path("fos_user_security_check") }}" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                        <div class="form-group">
                            <label for="username">{{ 'security.login.username'|trans }}</label>
                            <input type="text" class="form-control" name="_username" id="username" value="{{ last_username }}" required="required">
                        </div>

                        <div class="form-group">
                            <label for="password">{{ 'security.login.password'|trans }}</label>
                            <input type="password" name="_password" class="form-control" id="password">
                        </div>

                        <button type="submit" class="btn btn-default btn-primary btn-block">{{ 'security.login.submit'|trans }}</button>

                        <a href="#" class="resetting-password">Precisa de Ajuda?</a>

                        {% if error %}
                            <p class="text-danger">{{ error|trans }}</p>
                        {% endif %}                    

                    </form>  
                </div>      
            </div>      
        </div>      

        <div class="row">
            <div class="col-md-12 text-center">
                <a href="#" class="registration">Criar uma conta</a>
            </div>
        </div>
        
    </div>

{% endblock %}
